<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShellSample.App">
    <Application.Resources>
        <DataTemplate x:Key="ItemsSearchTemplate">
            <Grid Padding="10">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label
                       Text="{Binding Text}" FontAttributes="Bold"  />
                <Label Grid.Row="1" 
                       Text="{Binding Description}" 
                       />
            </Grid>
        </DataTemplate>
    </Application.Resources>
</Application>